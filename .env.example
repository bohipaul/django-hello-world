# Environment variables for Coolify deployment
# Copy this file to .env and configure your values

# Django Configuration
DJANGO_SETTINGS_MODULE=api.settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=participant.devci.net

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://participant.devci.net

# Database Configuration - PostgreSQL
# Option 1: Utiliser DATABASE_URL (recommand√© pour les services cloud)
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Configuration manuelle PostgreSQL
DB_NAME=django_app
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Gunicorn Configuration
PORT=3000
WEB_CONCURRENCY=4

# Security Settings for Production
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY