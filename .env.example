# Environment variables for Coolify deployment
# Copy this file to .env and configure your values

# Django Configuration
DJANGO_SETTINGS_MODULE=api.settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=participant.devci.net

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://participant.devci.net

# Database Configuration
# ðŸš€ SMART AUTO-DETECTION: 
#   - If DATABASE_URL exists â†’ PostgreSQL automatically used
#   - Otherwise â†’ DATABASE_TYPE controls the choice

# For Coolify/Heroku: Just set DATABASE_URL (auto-detects PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/dbname

# For manual setup: Choose database type
DATABASE_TYPE=sqlite  # 'sqlite' (default) or 'postgresql'

# SQLite (default - no additional config needed)
# Perfect for development and small deployments

# PostgreSQL with individual variables (if no DATABASE_URL)
# DB_NAME=your_db_name
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# ðŸ“‹ COOLIFY DEPLOYMENT:
# 1. Add PostgreSQL service in Coolify
# 2. Set DATABASE_URL environment variable in your app
# 3. No need to set DATABASE_TYPE - auto-detected!

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Gunicorn Configuration
PORT=3000
WEB_CONCURRENCY=4

# Security Settings for Production
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY