# Environment variables for Coolify deployment
# Copy this file to .env and configure your values

# Django Configuration
DJANGO_SETTINGS_MODULE=api.settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=participant.devci.net

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://participant.devci.net

# Database Configuration
# Choisissez votre méthode de configuration de base de données

# Option 1: SQLite (simple, pour développement local)
USE_SQLITE=True

# Option 2: PostgreSQL avec DATABASE_URL (pour services cloud comme Heroku)
# USE_SQLITE=False
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 3: PostgreSQL avec variables séparées (recommandé pour Coolify/Docker)
# USE_SQLITE=False
# DB_HOST=postgres-service-name-or-ip
# DB_NAME=your_database_name
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_PORT=5432

# Exemple pour Coolify:
# USE_SQLITE=False
# DB_HOST=postgres-hck40w8c84gk4cko8cw44wwc-115504903581
# DB_NAME=bddparticipation
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_PORT=5432

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Gunicorn Configuration
PORT=3000
WEB_CONCURRENCY=4

# Security Settings for Production
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY