# Environment variables for Coolify deployment
# Copy this file to .env and configure your values

# Django Configuration
DJANGO_SETTINGS_MODULE=api.settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=participant.devci.net

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://participant.devci.net

# Database Configuration
# Choose database type: 'sqlite' or 'postgresql'
DATABASE_TYPE=sqlite

# SQLite (default - no additional config needed)
# For development and small deployments

# PostgreSQL Configuration (if DATABASE_TYPE=postgresql)
DATABASE_URL=postgresql://user:password@host:port/dbname
# Or individual settings:
# DB_NAME=your_db_name
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Gunicorn Configuration
PORT=3000
WEB_CONCURRENCY=4

# Security Settings for Production
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY